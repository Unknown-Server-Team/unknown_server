<script>
    // Initialize particle system
    const canvas = document.getElementById('particles');
    if (canvas) {
        window.particleSystem = new ParticleSystem(canvas);
    }

    // Add hover effect to list items
    document.querySelectorAll('.hover-effect').forEach(item => {
        if (item.tagName === 'A') {
            // For links, only apply color change
            item.addEventListener('mouseover', function() {
                this.style.color = getComputedStyle(document.documentElement).getPropertyValue('--primary-color');
            });
            
            item.addEventListener('mouseout', function() {
                this.style.color = '';
            });
        } else {
            // For non-links, apply full hover effect
            item.addEventListener('mouseover', function() {
                this.style.transform = 'translateX(10px)';
                this.style.color = getComputedStyle(document.documentElement).getPropertyValue('--primary-color');
            });
            
            item.addEventListener('mouseout', function() {
                this.style.transform = 'translateX(0)';
                this.style.color = '';
            });
        }
    });
</script>